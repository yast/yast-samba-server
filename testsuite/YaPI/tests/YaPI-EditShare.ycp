// test for YaPI::Samba::EditShare()
// $Id$
// testedfiles: SambaConfig.pm

    import "SambaConfig";

    include "testsuite.ycp";
    include "./tests/tests-common.yh";

    SambaConfig::Import( $[
                    "global" : $[
			"_modified" : "1",
                        "workgroup" : "Test",
                        "domain master" : "no",
                        "security" : "user",
                        "preferred master" : "yes",
                        "domain logons" : "no",
                        "local master" : "no"],
                    "lp" : $[
			"_modified" : "1",
                        "comment" : "testing printer",
                        "printable" : "yes",
                        "path" : "/var/spool/lp"]]);

    import "YaPI::Samba";
    
    TEST( ``(YaPI::Samba::EditShare( "lp", $[
	"comment" : "now it's a production printer",
	"path" : "/var/spool/lp",
	"printable" : "yes",
    ])), [r_common,w_common,x_common], nil);
}
